# MariaDB
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_DATABASE=bits

# Recovery target
# 지원 TF: 1m,5m,15m,1h,4h (Upbit minutes 기반)
TF_LIST=1m,5m,15m,1h,4h

# markets: 비우면 Upbit 전체(주의: 많음). 보통 KRW-*만 추천
MARKET_FILTER=KRW-

# 기간 (KST, inclusive)
START_KST=2026-01-01 00:00:00
END_KST=2026-01-12 23:59:59

# 동시성 (Upbit rate 고려)
CONCURRENCY=3

# 실행 모드
# candles: 캔들만 복구
# indicators: 캔들 DB 기반으로 지표 테이블 재생성
# all: 둘다
MODE=all

# 지표 재생성시 lookback (최소 60 이상 권장)
INDICATOR_LOOKBACK=120
