# apps/recovery/.env.example
NODE_ENV=development

# DB
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=password
DB_NAME=bits

# KAFKA (optional: republish)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=recovery
KAFKA_TOPIC_CANDLE=upbit.candle

# RECOVERY MODE
# republish | direct_db
RECOVERY_MODE=republish

# Exchange
UPBIT_REST_BASE=https://api.upbit.com

# Targets
MARKETS=KRW-BTC,KRW-ETH
TFS=1m,5m,15m,1h,4h

# Range
# yyyy-mm-dd (KST local midnight) or epoch seconds
START_DATE=
END_DATE=

# Safety
MAX_MISSING_PER_MARKET=5000
REST_CONCURRENCY=3
KAFKA_BATCH_BYTES=900000
REST_SLEEP_MS=120
