# apps/recovery/.env.example
NODE_ENV=development

# DB
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=password
DB_NAME=bits

# RECOVERY MODE
# republish | direct_db
RECOVERY_MODE=republish

# Exchange
UPBIT_REST_BASE=https://api.upbit.com

# Targets
MARKETS=KRW-BTC,KRW-ETH
TFS=1m,5m,15m,1h,4h

# Range
# yyyy-mm-dd (KST local midnight) or epoch seconds
START_DATE=
END_DATE=

RECOVERY_TASK=both
MAX_MISSING_PER_MARKET=5000

REST_CONCURRENCY=1
REST_SLEEP_MS=800
UPBIT_MIN_INTERVAL_MS=800

INDICATOR_LOOKBACK_BARS=600
DEBUG_RECOVERY=1